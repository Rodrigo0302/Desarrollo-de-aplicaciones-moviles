    </style>

    <!-- Estilo para el item del spinner -->
    <style name="CustomSpinnerItemStyle">
        <item name="android:textColor">@color/black</item> <!-- Cambiar color de texto -->
        <item name="android:textSize">20sp</item> <!-- Cambiar tamaño de texto -->
    </style>

    <style name="Theme.PawPal" parent="Base.Theme.PawPal" />
